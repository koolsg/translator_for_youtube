{
  "manifest_version": 3,
  "name": "YouTube Translator",
  "version": "0.01",
  "description": "",
  "permissions": ["activeTab", "storage", "webNavigation", "scripting"],
  "host_permissions": ["https://www.youtube.com/*", "http://localhost:5000/*"],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["icon.svg", "translator_ui.html", "translator_ui.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_icon": "icon.svg"
  }
}